<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.my.service.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starandtstop"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/startservice_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:background="#1c7cee"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:text="startService()"
        android:textColor="#ffffff"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/stopservice_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:background="#1c7cee"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:text="stopService()"
        android:textColor="#ffffff"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/bindservice_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:background="#1c7cee"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:text="bindService()"
        android:textColor="#ffffff"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/unbindservice_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:background="#1c7cee"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:text="unbindService()"
        android:textColor="#ffffff"
        android:textAllCaps="false"/>
    <TextView
        android:id="@+id/show_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="count"
        android:layout_margin="10dp"
        android:textColor="#ffffff"
        android:background="#1c7cee"
        android:padding="20dp"/>

</LinearLayout>
